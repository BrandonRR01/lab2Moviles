<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home">

    <TextView
            android:text="LISTA DE CENTROS COMERCIALES (LAB2)"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="400dp" android:layout_marginEnd="158dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="158dp"/>/>
    <Button
            android:onClick="mapAlajuela"
            android:text="Mall Alajuela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnAlajuela"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="250dp" android:layout_marginEnd="158dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="158dp"/>
    <Button
            android:onClick="mapHeredia"
            android:text="Mall Heredia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnHeredia"
            android:layout_marginTop="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="190dp" android:layout_marginEnd="158dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="158dp"/>

    <Button
            android:onClick="anuncios"
            android:text="Anuncios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnAnuncio"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="130dp" android:layout_marginEnd="158dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="158dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>