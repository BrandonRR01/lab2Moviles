<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AnuncioActivity">

    <Button

            android:text="Interstitial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnA1"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="250dp" android:layout_marginEnd="158dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="158dp"/>
    <Button

            android:text="Native"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnA2"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="180dp" android:layout_marginEnd="158dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="158dp"/>

    <com.google.android.gms.ads.AdView
            app:adUnitId="ca-app-pub-3940256099942544/6300978111"
            app:adSize="BANNER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/adBanner"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="78dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            app:layout_constraintHorizontal_bias="0.6"/>

</androidx.constraintlayout.widget.ConstraintLayout>